@model TheMovies.Models.Peliculas

@Html.Partial("~/Views/Main/Menu.cshtml")

@using (Html.BeginForm("Editar", "Peliculas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id_peliculas)

    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
            <legend class="text-condensedLight"><i class="zmdi zmdi-border-color"></i> &nbsp; Datos de la  Peliculas</legend><br>
        </div>

        <div class="mdl-cell mdl-cell--12-col">


            <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(x => x.Nombre, new { @class = "mdl-textfield__input" })
                    <label class="mdl-textfield__label" for="NameClient">Nombre</label>
                    @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.DropDownListFor(x => x.Genero, new SelectList(new List<SelectListItem> {
                    new SelectListItem { Text = "Accion", Value = "Accion"},
                    new SelectListItem { Text = "Terror", Value = "Terror"},
                    new SelectListItem { Text = "Drama", Value = "Drama"},
                    new SelectListItem { Text = "Comedia", Value = "Comedia"}
                    }, "Value", "Text"),
                    "Seleciona El Genero",
                    new { @class = "mdl-textfield__input" } )

                </div>

            </div>






            <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(x => x.AñoPublicacion, new { @type = "number", @class = "mdl-textfield__input" })
                    <label class="mdl-textfieAñoPublicacionld__label" for="phoneClient">Año</label>
                    @Html.ValidationMessageFor(x => x.AñoPublicacion, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                <img src="@Url.Action("RetrieveImage", "Peliculas", new {id = Model.Id_peliculas })" height=120 width=120 />
            </div>



            <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(x => x.Director, new { @class = "mdl-textfield__input" })
                    <label class="mdl-textfield__label" for="NameClient">Director</label>
                    @Html.ValidationMessageFor(x => x.Director, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="mdl-cell mdl-cell--4-col mdl-cell--8-col-tablet">
                <div class="mdl-textfield mdl-js-textfield">
                    <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />

                </div>
            </div>



            <div class="text-center">
                <input type="submit" value="Edit" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored bg-primary" id="btn-addClient" />
                <div class="mdl-tooltip" for="btn-addClient">Editar Peliculas</div>

            </div>
        </div>

    </div>

}
